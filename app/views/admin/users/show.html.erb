<div class="container my-4">
  <div class="row mb-3">
    <div class="col-sm-8 mx-auto">
      <h1>ユーザー情報</h1>
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
      <table class="table">
        <tr>
          <th>プロフィール画像</th>
          <td>
            <%= image_tag @user.get_user_image(80, 80), alt: "ユーザー画像", class:"user_profile_image"%>
            <div class="my-2">
              <%= link_to "#{@user.name}のマイページを表示", user_path(@user.id), class: "btn btn-success" %>
            </div>
          </td>
        </tr>
        
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        
        <tr>
          <th>紹介文</th>
          <td><%= safe_join(@user.content.split("\n"),tag(:br)) %></td>
        </tr>
        
        <tr>
          <th>アカウント作成日</th>
          <td><%= @user.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        </tr>
        
        <tr>
          <th>アカウント更新日</th>
          <td><%= @user.updated_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        </tr>
        
        <tr>
          <th>アカウント状況</th>
          <td>
            <div>
              <p>現在の状況： <span class="lead"><%= @user.active? %></span></p>
            </div>
            <div class="form-check">
              <label>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効", value: true %>
              </label><br>
              <label>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "退会", value: false %>
              </label>
            </div>
            <div class="mt-3 d-flex">
              <div class="me-1">
                <%= f.submit "アカウント状況の変更", class: "btn btn-warning" %>
              </div>
              <div class="ms-1">
                <%= link_to "直前のページに戻る", :back, class:"btn btn-success" %>
              </div>
            </div>
          </td>
        </tr>
        
      </table>
      <% end %>
    </div>
  </div>
</div>