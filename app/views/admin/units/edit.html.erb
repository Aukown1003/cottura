<div class="container">
  <div class="row mt-4">

    <div class="col-md-4 m-auto">
      <%= form_with(model: @unit, url: admin_unit_path, method: :patch, local: true) do |f| %>
        <div class="form-group">
          <h5>レシピ材料の単位の作成</h5>
          <%= f.text_field :name, placeholder: "ジャンル名", class:"form-control", required:"required" %>
        </div>
        <div class="form-group">
          <%= f.submit "単位の変更", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>