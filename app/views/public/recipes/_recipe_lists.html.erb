<%# style="max-width: 255px;" %>
<div class="recipe-index-item col border border-dark rounded mb-2">
  <div class="recipe-image text-center pt-2">
    <%= link_to image_tag(recipe.get_recipe_index_image(200, 200)), recipe_path(recipe.id), class:"img-fluid" %>
  </div>
  
  <div class="fw-bold text-truncate my-1" style="margin-left: 5%;">
    <%= recipe.title %>
  </div>

  <div class="my-1" style="margin-left: 5%;">
    <i class="far fa-clock"></i><span class="ps-2"><%= recipe.view_time_data %></span>
  </div>

  <div class="d-flex justify-content-center mb-2">
    <%= render "/public/recipes/review", recipe: recipe %>
  </div>
</div>
