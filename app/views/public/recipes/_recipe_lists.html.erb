<div class="group neumorphism index-item col-sm-6 col-md-4 col-lg-3 col-xxl-2 mb-2">
  <div class="box index-item-parts rounded">
    <div class="recipe-image text-center pt-2">
      <%= link_to image_tag(recipe.get_recipe_index_image(200, 200)), recipe_path(recipe.id), class:"img-fluid" , 'data-turbolinks': false %>
    </div>
    <div class="recipe-contents">
      <div class="fw-bold text-truncate mt-1 px-2 px-sm-4 ps-xl-4 px-md-2">
        <%= link_to recipe.title, recipe_path(recipe.id), class: "" %>
      </div>
      <div class="px-2 px-sm-4 ps-xl-4 px-md-2">
        <%= recipe.view_time_data %>
      </div>
      <div class="mb-2 pb-2 pX-2 px-sm-4 ps-xl-4 px-md-2">
        <%= render "/public/recipes/review", recipe: recipe %>
      </div>
    </div>
  </div>
</div>