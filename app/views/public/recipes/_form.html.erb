<%= form_with(model: @recipe, local: true) do |f| %>
  
  
  
  <div>材料</div>
  <div class="recipe_ingredient">
    <%= f.fields_for :recipe_ingredients do |ingredient| %>
      <%= render "recipe_ingredient_fields", f: ingredient %>
    <% end %>
    <%= link_to_add_fields "材料の追加", f, :recipe_ingredients %>
  </div>

  <div>作り方</div>
  <div>
    <%= f.text_field :content, placeholder: "説明", class:"ingredient__content"%>
  </div>
  <div class="recipe_step">
    <%= f.fields_for :recipe_steps do |step| %>
      <%= render "recipe_step_fields", f: step %>
    <% end %>
    <%= link_to_add_fields "作り方の追加", f, :recipe_steps %>
  </div>

  <%= f.submit "レシピを投稿する" %>
<% end %>

<script>
// 項目追加
class addFields {
  constructor() {
    this.links = document.querySelectorAll('.add_fields')
    this.iterateLinks()
  }

  iterateLinks() {
    if (this.links.length === 0) return
    this.links.forEach(link => {
      link.addEventListener('click', e => {
        this.handleClick(link, e)
      })
    })
  }

  handleClick(link, e) {
    if (!link || !e) return
    e.preventDefault()
    let time = new Date().getTime()
    let linkId = link.dataset.id
    let regexp = linkId ? new RegExp(linkId, 'g') : null
    let newFields = regexp ? link.dataset.fields.replace(regexp, time) : null
    newFields ? link.insertAdjacentHTML('beforebegin', newFields) : null
  }
}

window.addEventListener('turbolinks:load', () => new addFields())

// 項目削除
class removeFields {
  constructor() {
    this.iterateLinks()
  }

  iterateLinks() {
    document.addEventListener('click', e => {
      if (e.target && e.target.className == 'remove_fields') {
        this.handleClick(e.target, e)
      }
    })
  }

  handleClick(link, e) {
    if (!link || !e) return
    e.preventDefault()
    let fieldParent = link.closest('.nested-fields')
    let deleteField = fieldParent
      ? fieldParent.querySelector('input[type="hidden"]')
      : null
    if (deleteField) {
      deleteField.value = 1
      fieldParent.style.display = 'none'
    }
  }
}

window.addEventListener('turbolinks:load', () => new removeFields())
</script>
