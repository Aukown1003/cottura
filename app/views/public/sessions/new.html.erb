<div class="container-fluid px-4">
  <div class="row mb-3">
    <div class="image-container col-md-6 mx-auto">
      <%= image_tag 'sign_in_image.jpg', class:"sign_in_image img-fluid" %>
      <p class="sing_in_text">Welcome!</p>
    </div>
    <div class="col-md-6 mx-auto my-auto">
      <h2 class="border-bottom border-2 mt-4 mt-md-0">ログイン</h2>
      <%= form_with model: @user, url: session_path(resource_name) do |f| %>
        
        <div class="mb-3 mt-3">
          <%= f.label :email, "メールアドレス", { class: "form-label required"} %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <%= f.email_field :email, { class: "form-control", autofocus: true, autocomplete: "email", placeholder: "cottura@example.com" } %>
          </div>
        </div>
        
        <div class="mb-3">
          <%= f.label :password, "パスワード", { class: "form-label required"} %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-lock"></i></span>
            <%= f.password_field :password, { class: "form-control", autocomplete: "new-password", placeholder: "password" } %>
          </div>
        </div>
        
        <div class="mt-3">
          <%= f.submit "ログイン", class:"btn btn-lg btn-primary w-100" %>
        </div>
      <% end %>
      <p class="text-center my-1">もしくは</p>
      <div>
        <%= link_to "ゲストログイン",  user_guest_sign_in_path, method: :post, class:"gest-btn btn btn-lg btn-warning w-100" %><br>
      </div>
    </div>
  </div>
</div>